<UserControl x:Class="PointOfSale.FinalOrderComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="480">
    <DockPanel>
        <TextBlock Name="orderNumberTextBlock" DockPanel.Dock="Top" FontSize="45" FontWeight="Bold" TextAlignment="Center">
            Order #xxx
        </TextBlock>
        <TextBlock DockPanel.Dock="Bottom" FontSize="45"/>
        <TextBlock Name="totalTextBlock" DockPanel.Dock="Bottom" FontSize="45" FontWeight="Bold" TextAlignment="Center">
            Total: $xx.xx
        </TextBlock>
        <TextBlock Name="taxTextBlock" DockPanel.Dock="Bottom" FontSize="45" TextAlignment="Center">
            Tax: $xx.xx
        </TextBlock>
        <TextBlock Name="subtotalTextBlock" DockPanel.Dock="Bottom" FontSize="45" TextAlignment="Center">
            Subtotal: $xx.xx
        </TextBlock>
        <ListView Name="orderList"/>
    </DockPanel>
</UserControl>
